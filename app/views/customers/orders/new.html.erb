<!-- ラジオボタンの中に配送先の登録フォームがある -->
<div class="container">
	<div class="row">

	<h3>注文情報入力</h3></br>

		<%= form_with url:orders_new_confirm_path do |f| %>
		<span>支払い方法</span></br>
			<%= f.radio_button :payment_methods, :銀行振込 %>
			<%= f.label :payment_methods, "銀行振込", style: "display: inline-block"  %></br>
			<%= f.radio_button :payment_methods, :クレジットカード %>
			<%= f.label :payment_methods, "クレジットカード", style: "display: inline-block"  %></br>

		<span>お届け方法</span></br>
			<%= f.radio_button :address, current_customer.address %>
			<%= f.label :address, "ご自身の住所", style:"display:inline-block" %></br>
			<%= current_customer.address %><br>

			<%= f.radio_button :address, :登録済の住所から選択 %>
			<%= f.label :登録先住所から選択 %><br>

			<%= f.radio_button :address, :新しいお届け先 %>
			<%= f.label :新しいお届け先 %>
		<% end %>
	</div>
</div>